<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="82dp"
    android:layout_height="128dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/artist_item_img"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.HomeFragment.ArtistShape"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/artist_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Eleanor Summer"
        android:layout_below="@id/artist_item_img"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/SmallText2"/>
</RelativeLayout>